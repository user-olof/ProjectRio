            "request": "launch",
            "program": "${workspaceFolder}/scripts/manage.py",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "args": [
                "test",
                "--debug-mode",
                "tests"
            ],
            "django": true,
        },
        {
            "name": "TEST accounts",
            "python": "${workspaceFolder}/venv/bin/python3.7",
