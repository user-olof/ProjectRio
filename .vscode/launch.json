            "name": "RUN",
            "python": "${workspaceFolder}/venv/bin/python3.7",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/scripts/manage.py",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true,
        },
        {
            "name": "TEST all",
            "python": "${workspaceFolder}/venv/bin/python3.7",
